<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin">

    <TextView
        android:id="@+id/txvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="Restaurant name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="2km"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txvItemName" />

    <TextView
        android:id="@+id/txvPriceRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="€€€"
        app:layout_constraintStart_toEndOf="@id/txvDistance"
        app:layout_constraintTop_toBottomOf="@id/txvItemName" />

    <TextView
        android:id="@+id/txvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/babel_stone_han"
        android:text="@string/star"
        android:textColor="#CAB603"
        app:layout_constraintStart_toEndOf="@id/txvPriceRange"
        app:layout_constraintTop_toBottomOf="@id/txvItemName" />

    <TextView
        android:id="@+id/txvRatingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="1dp"
        android:text="#35"
        app:layout_constraintStart_toEndOf="@id/txvRating"
        app:layout_constraintTop_toBottomOf="@id/txvItemName" />

    <ImageView
        android:id="@+id/ivwLogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/masa_schmidt" />

</androidx.constraintlayout.widget.ConstraintLayout>